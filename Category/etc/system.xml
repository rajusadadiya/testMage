<?xml version="1.0"?>
<config>
    <tabs>
        <bytescategory translate="label">
            <label>Bytes</label>
            <sort_order>75</sort_order>
        </bytescategory>
    </tabs>
    <sections>
        <bytescategorytab translate="label" module="bytescategory">
            <label>Website Category</label>
            <tab>bytescategory</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <smallbusiness translate="label comment">
                    <label>Smallbusiness Website</label>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    
                    <fields>
                        <code translate="label comment">
                            <label>Code</label>
                            <comment>Website code (case sensitive).</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </code>
                        <rootcategory translate="label comment">
                            <label>Root Category</label>
                            <comment>select root category for samll business website.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>bytescategory/system_config_source_category</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </rootcategory>
                        <category translate="label comment">
                            <label>Category</label>
                            <comment>Select category under in main store</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>bytescategory/system_config_source_mainstorecategory</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </category>
                    </fields>
                </smallbusiness>
                <personalforms>
                    <label>Personal Forms Website</label>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <code translate="label comment">
                            <label>Code</label>
                            <comment>Website code (case sensitive).</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </code>
                        <rootcategory translate="label comment">
                            <label>Root Category</label>
                            <comment>select root category for parsonal forms.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>bytescategory/system_config_source_category</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </rootcategory>
                        <category translate="label comment">
                            <label>Category</label>
                            <comment>Select category under in main store</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>bytescategory/system_config_source_mainstorecategory</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </category>                        
                    </fields>
                </personalforms>                
            </groups>
        </bytescategorytab>
    </sections>
</config>